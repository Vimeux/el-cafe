{% extends 'base.html.twig' %} {% block body %} {% for flash_error in
app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}

{{ form_start(registrationForm) }}
<div class="h-screen bg-beige flex justify-center items-center">
  <div
    style="display: grid; padding: 20px; border-radius: 20px"
    class="
      w-full
      max-w-xs
      bg-white
      flex flex-col
      py-5
      px-8
      rounded-lg
      shadow-lg
    "
    action="{{ path('login') }}"
    method="post"
  >
    <h1 style="font-size: 25px">Inscription</h1>
    {{
      form_label(registrationForm.email, "Votre email", {
        attr: { class: "text-gray-700 font-bold py-2" }
      })
    }}
    {{
      form_widget(registrationForm.email, {
        attr: {
          class:
            "text-gray-700 shadow border rounded border-gray-300 focus:outline-none focus:shadow-outline py-1 px-3 mb-3",
          style: "border-radius: 5px"
        }
      })
    }}
    {{
      form_label(registrationForm.plainPassword, "Votre mot de passe", {
        attr: { class: "text-gray-700 font-bold py-2" }
      })
    }}
    {{
      form_widget(registrationForm.plainPassword, {
        attr: {
          class:
            "text-gray-700 shadow border rounded border-gray-300 focus:outline-none focus:shadow-outline py-1 px-3 mb-3",
          style: "border-radius: 5px"
        }
      })
    }}
    {{
      form_label(registrationForm.agreeTerms, "Accepter les termes", {
        attr: { class: "text-gray-700 font-bold py-2" }
      })
    }}
    {{
      form_widget(registrationForm.agreeTerms, {
        attr: {
          class:
            "text-gray-700 shadow border rounded border-gray-300 focus:outline-none focus:shadow-outline py-1 px-3 mb-3",
          style: "border-radius: 5px"
        }
      })
    }}
    <button
      type="submit"
      class="
        inline-flex
        justify-center
        py-2
        px-4
        border border-transparent
        shadow-sm
        text-sm
        font-medium
        rounded-md
        text-white
        bg-mango
        hover:bg-light-coffee
        focus:outline-none
        focus:ring-2
        focus:ring-offset-2
        focus:ring-dark-coffee
      "
    >
      S'enregistrer
    </button>
    <a class="text-black-600 hover:text-orange-800 font-bold" href="/login">
      J'ai déjà un compte
    </a>
  </div>
</div>
{{ form_end(registrationForm) }}

{% endblock %}
