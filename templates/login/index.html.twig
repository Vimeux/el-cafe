{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


<div class="h-screen bg-beige flex justify-center items-center">
    <form  style="display: grid; padding: 20px; margin-top: 50px; border-radius: 20px" class ="w-full max-w-xs bg-white flex flex-col py-5 px-8 rounded-lg shadow-lg" action="{{ path('login') }}" method="post">
        <h1 style="font-size: 25px">Connexion</h1>
        {# <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/> #}

        {# <label for="password">Password:</label>
        <input type="password" id="password" name="_password"/> #}

            <label for="username" class="text-gray-700 font-bold py-2">Votre email</label>
            <input style="border-radius: 5px" type="email" id="username" name="_username" value="{{ last_username }}" class="text-gray-700 shadow border rounded border-gray-300 focus:outline-none focus:shadow-outline py-1 px-3 mb-3" placeholder="exemple@hotmail.fr" required="">
            </br>
            <label for="password" class="text-gray-700 font-bold py-2">Votre mot de passe</label>
            <input style="border-radius: 5px" type="password" id="password" name="_password" class="text-gray-700 shadow border rounded border-gray-300 mb-3 py-1 px-3 focus:outline-none focus:shadow-outline" required="">
            </br>

        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-mango hover:bg-light-coffee focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-dark-coffee">Se connecter</button>
        <a class="text-blue-600 hover:text-blue-800 font-bold" href="/register">
            Pas de compte ? Cliquez ici
      </a>
    </form>
</div>

{% endblock %}