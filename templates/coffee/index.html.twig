{% extends 'base.html.twig' %}

{% block title %}Coffee index{% endblock %}

{% block body %}
<h1 class="text-4xl font-bold text-center text-gray-800 mb-8">Index café</h1>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Id
                </th>
                <th scope="col" class="px-6 py-3">
                    Nom
                </th>
                <th scope="col" class="px-6 py-3">
                    Intensité
                </th>
                <th scope="col" class="px-6 py-3">
                    Origine
                </th>
                <th scope="col" class="px-6 py-3">
                    <span class="sr-only">Actions</span>
                </th>
            </tr>
        </thead>
        <tbody>
            {% for coffee in coffees %}
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                    <td class="px-6 py-4">
                        {{ coffee.id }}
                    </td>
                    <td class="px-6 py-4">
                        {{ coffee.name }}
                    </td>
                    <td class="px-6 py-4">
                        {{ coffee.intensity }}
                    </td>
                    <td class="px-6 py-4">
                        {{ coffee.origin }}
                    </td>
                    <td class="px-6 py-4 text-right">
                        <a href="{{ path('app_coffee_show', {'id': coffee.id}) }}">show</a>
                        <a href="{{ path('app_coffee_edit', {'id': coffee.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune entité trouvée</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<a class="text-black-600 hover:text-orange-500 font-bold" href="{{ path('app_coffee_new') }}">Créer un nouveau café</a>
{% endblock %}
