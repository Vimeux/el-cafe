{% extends 'base.html.twig' %}

{% block title %}CoffeeShop index{% endblock %}

{% block body %}
<h1 class="text-4xl font-bold text-center text-gray-800 mb-8">Index coffee shop</h1>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Id
                </th>
                <th scope="col" class="px-6 py-3">
                    Nom
                </th>
                <th scope="col" class="px-6 py-3">
                    Adresse
                </th>
                <th scope="col" class="px-6 py-3">
                    Site internet
                </th>
                <th scope="col" class="px-6 py-3">
                    <span class="sr-only">Actions</span>
                </th>
            </tr>
        </thead>
        <tbody>
            {% for coffee_shop in coffee_shops %}
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                    <td class="px-6 py-4">
                        {{ coffee_shop.id }}
                    </td>
                    <td class="px-6 py-4">
                        {{ coffee_shop.name }}
                    </td>
                    <td class="px-6 py-4">
                        {{ coffee_shop.address }}
                    </td>
                    <td class="px-6 py-4">
                        {{ coffee_shop.website }}
                    </td>
                    <td class="px-6 py-4 text-right">
                        <a href="{{ path('app_coffee_shop_show', {'id': coffee_shop.id}) }}">show</a>
                        <a href="{{ path('app_coffee_shop_edit', {'id': coffee_shop.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune entité trouvée</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<a class="text-black-600 hover:text-orange-500 font-bold" href="{{ path('app_coffee_shop_new') }}">Créer un nouveau coffee shop</a>

{% endblock %}
